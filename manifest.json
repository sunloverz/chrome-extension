{
  "name": "Localize In-Context Editor Extension",
  "description": "Allow your site to be iframed in the Localize In-Context Editor.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "tabs",
    "http://www.localizejs.com/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "manifest_version": 2
}
